# Copy to .env and fill values before running in production
# Must set a strong SESSION_SECRET in production
SESSION_SECRET=change_this_to_a_long_random_value
# NODE_ENV should be 'production' on deployed servers
NODE_ENV=production
# If you want to allow seed route in production (not recommended), set to 'true'
ALLOW_SEED=false
# Optional: set client origin for CORS and uploads
CLIENT_ORIGIN=https://your-frontend.example.com
# Optional Redis URL to enable Redis session store (redis://user:pass@host:6379)
REDIS_URL=
